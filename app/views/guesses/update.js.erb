var response1 = <%= @guessing_player.next_player.disprove_guess(@guess) %> ? "<%= @guessing_player.next_player.name %> reveals a card.": "<%= @guessing_player.next_player.name %> passes.";

if (!<%= @guessing_player.next_player.disprove_guess(@guess) %>) {
  response2 = <%= @guessing_player.next_player.next_player.disprove_guess(@guess) %> ? "<%= @guessing_player.next_player.next_player.name %> reveals a card.": "<%= @guessing_player.next_player.next_player.name %> passes.";
}

$("#response1").lbyl({
    content: response1,
    speed: 25,
    finished: function() {
     $("#response2").lbyl({
        content: response2 || "",
        speed: 25,
      });
    }
});

<p>Welcome to the <%= @room.name %>, <%= @player.name %></p>


<p>Your cards are:
  <%= @player.cards.collect {|c| c.name}.to_sentence %>
</p>

<!-- <h2>Your possible suspects: <%= @player.possible_cards.suspects.collect {|c| c.name}.to_sentence %></h2>
<h2>Your possible rooms: <%= @player.possible_cards.rooms.collect {|c| c.name}.to_sentence %></h2>
<h2>Your possible weapons: <%= @player.possible_cards.weapons.collect {|c| c.name}.to_sentence %></h2> -->

<% if @current_player == @player %>
  <h2>Change Room:</h2>
  <% @room.next_rooms.each do |room| %>
  <div class="col-xs-4 text-center">
    <h4><%= link_to room.name, game_room_path(@game, room) %></h4>
  </div>
  <% end %>
  <br><br>

  <% if !@player.accusation %>
    <% if true %>
      <%= render 'guesses/form' %>
    <% end %>

    <% if true %>
      <%= render 'accusations/form' %>
    <% end %>
  <% end %>
<% else %>
  <h2 id="game_play"></h2>
  <h2 id="game_play2"></h2>
  <h2 id="game_play3"></h2>
  <!-- <%= link_to 'Next', guess_path(@current_player.guesses.last), :data => {:method => 'patch'}, remote: true  %> -->
  <!-- <%= disprove_guess(@current_player.next_player, @current_player.guesses.last) %> -->
  <%= link_to 'Next', game_path(@game), :data => {:method => 'patch'} %>
<% end %>

answer and opponents cards:
<p>It was <%= @answer.cards.suspect.name %> in the <%= @answer.cards.room.name %>
with the <%= @answer.cards.weapon.name %></p>


<% @players.each do |player| %>
  <div class="col-xs-2">
  <li><%= player.name %></li>
  <ul>
  <% player.cards.each do |card| %>
  <li><%= card.name %></li>
  <% end %>
  </ul>
  </div>
<% end %>


<script type="text/javascript">
jQuery(document).ready(function($){

    $("#game_play").lbyl({
        content: "It is <%= @current_player.name %>'s turn.",
        speed: 25,
        finished: function() {
         $("#game_play2").lbyl({
            content: "<%= @current_player.name %> went into the <%= @current_player.current_room.name %>.",
            speed: 25,
            finished: function() {
              $("#game_play3").lbyl({
                content: "<%= @current_player.name %> guessed <%= @current_player.guesses.last.cards.suspect.name %> in the <%= @players[@game.turn].guesses.last.cards.room.name %> with the <%= @players[@game.turn].guesses.last.cards.weapon.name %>.",
                speed: 25
              });
            }
         });
       }
    });

});
</script>

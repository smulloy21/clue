<p>Welcome to the <%= @room.name %>, <%= @player.name %></p>


<p>Your cards are:
  <%= @player.cards.collect {|c| c.name}.to_sentence %>
</p>

<!-- <h2>Your possible suspects: <%= @player.possible_cards.suspects.collect {|c| c.name}.to_sentence %></h2>
<h2>Your possible rooms: <%= @player.possible_cards.rooms.collect {|c| c.name}.to_sentence %></h2>
<h2>Your possible weapons: <%= @player.possible_cards.weapons.collect {|c| c.name}.to_sentence %></h2> -->

<% if @current_player == @player %>
  <h2>Change Room:</h2>
  <% @room.next_rooms.each do |room| %>
  <div class="col-xs-4 text-center">
    <h4><%= link_to room.name, game_room_path(@game, room) %></h4>
  </div>
  <% end %>
  <br><br>

  <% if !@player.accusation %>
    <% if true %>
      <%= render 'guesses/form' %>
    <% end %>

    <% if true %>
      <%= render 'accusations/form' %>
    <% end %>
  <% end %>
<% else %>
  <div class="game_play">
    <h2>It is <%= @current_player.name %>'s turn.</h2>
    <h2><%= @current_player.name %> went into the <%= @current_player.current_room.name %>.</h2>
    <h2><%= @current_player.name %> guessed <%= @last_guess.cards.suspect.name %> in the <%= @last_guess.cards.room.name %> with the <%= @last_guess.cards.weapon.name %>.</h2>
  </div>
  <div class="game_play2">
    <%= disprove_guess(@current_player.next_player, @last_guess) %>
  </div>
  <%= link_to 'Next', guess_path(@current_player.guesses.last), id: "update", :data => {:method => 'patch'}, remote: true  %>
  <!-- <div class="disprove">
    <%= disprove_guess(@current_player.next_player, @current_player.guesses.last) %>
  </div>
  <%= link_to 'Next', game_path(@game), :data => {:method => 'patch'} %> -->
<% end %>

answer and opponents cards:
<p>It was <%= @answer.cards.suspect.name %> in the <%= @answer.cards.room.name %>
with the <%= @answer.cards.weapon.name %></p>


<% @players.each do |player| %>
  <div class="col-xs-2">
  <li><%= player.name %></li>
  <ul>
  <% player.cards.each do |card| %>
  <li><%= card.name %></li>
  <% end %>
  </ul>
  </div>
<% end %>


<script type="text/javascript">
  $('.game_play').show();
  $(".game_play > h2").letterfx({"fx":"smear","backwards":false,"timing":50,"fx_duration":"4050ms","letter_end":"rewind","element_end":"stay"});
  $(window).keypress(function (e) {
    if (e.keyCode === 0 || e.keyCode === 32) {
      $('a#update').trigger('click');
    }
  });
</script>
